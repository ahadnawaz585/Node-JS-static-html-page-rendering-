extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/styles/accountant.css")
  link(rel="stylesheet", href="/styles/layout.css")


block content
  .header-container
  .table-page
    h1 Add Accountants
    #formContainer.hidden
      form#accountForm
        label(for="code") Accountant Code:
        input(type="text", id="code", required)
        label(for="name") Name:
        input(type="text", id="name", required)
        button(type="submit") Add
      .accountantTable 
        a(href="/accountantTable") View Accountants

block scripts
  script(src="/scripts/accountant.js")
  script(src="/scripts/layout.js")